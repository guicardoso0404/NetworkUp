        "data_envio": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["enviada", "lida"]
        },
        "usuario_id": {
          "type": "integer"
        },
        "usuario_nome": {
          "type": "string"
        },
        "foto_perfil": {
          "type": "string"
        }
